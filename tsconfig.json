{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": false,
		"downlevelIteration": true,
		"importHelpers": true,
		"inlineSourceMap": false,
		"inlineSources": false,
		"listEmittedFiles": false,
		"listFiles": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noErrorTruncation": true,
		"noImplicitAny": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist/",
		// "paths": {
		// 	"@enonic/js-utils/dist/cjs": ["node_modules/@enonic/js-utils/src"]
		// },
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": "./src",
		// "rootDirs": [
		// 	"src",
		// 	"node_modules",
		// 	// "test"
		// ],
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "ES5",
		// "types": [],
		"verbatimModuleSyntax": false,
	},
	"exclude": [
		"node_modules",
		"test",
	],
	// "files": [
	// 	"src/index.ts"
	// ],
	"include": [
		"src/**/*.ts"
	]
}
